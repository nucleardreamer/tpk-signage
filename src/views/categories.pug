each catItems, catTitle in cats
    .category
        .menu-title.pb-2= catTitle
        each item in catItems
            if item.Available
                .d-flex.flex-column.mb-3
                    .d-flex.flex-row
                        b.name= item.Name
                        .mr-1.ml-1.light-grey |
                        .slug= item.Slug
                        i.price.ml-1 ($#{item.Price})
                    div
                        i= item.Description
